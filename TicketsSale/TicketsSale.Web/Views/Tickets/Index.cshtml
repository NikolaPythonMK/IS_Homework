@model List<TicketsSale.Domain.DomainModels.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}


<div class="container mb-5">
    <h1 class="display-4 text-success mb-3 mt-3">All Tickets</h1>
    <div class="row mt-3">
        <a class="btn btn-success" asp-action="Create">Add New Ticket</a>
    </div>
    <div class="row mt-3 justify-center">
        <form asp-action="Index" method="get">
            <div class="d-flex">
                <input type="datetime-local" name="datetofilter" class="mx-2 form-control" />
                <input type="submit" name="submit" value="Show" class="btn btn-primary" />
            </div>
        </form>
    </div>


    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">

            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" src="@item.MovieImage" style="height: 50%;" alt="Image not found!">

                    <div class="card-body">
                        <h3 class="card-title">@item.MovieTitle</h3>
                        <hr />
                        <p class="card-text">Genres: @item.MovieGenre</p>
                        <p class="card-text">Addedn on: @item.ValidDate</p>
                        <h6 class="text-success">Price: $@item.Price</h6>
                    </div>

                    <div class="card-footer p-0">
                        <a asp-controller="Tickets" asp-action="AddTicketToCart" asp-route-id="@item.Id" class="btn btn-info mx-1">Add to Card</a>
                        <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mx-1">Edit</a>
                        <a asp-controller="Tickets" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                    </div>
                </div>
            </div>


            if (i % 3 == 2)
            {
            @:</div>
        }
    }
</div>



<nav aria-label="Page navigation example mt-5">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link">Previous</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>