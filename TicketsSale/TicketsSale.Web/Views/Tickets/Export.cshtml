@model TicketsSale.Domain.DTO.ExportTIcket

@{
    ViewData["Title"] = "Export";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>
    .size-up {
        font-size: 2rem;
    }
</style>

<h1 class="display-4 text-success">Export Tickets</h1>


<hr />

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Export">
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Export" class="btn btn-success w-100" />
            </div>
        </form>
    </div>
</div>

<hr />

<div>
    <a asp-action="Index" class="size-up">Go Back to Tickets page.</a>
</div>